// Defining the HTML document with the "en" language attribute
html(lang="en") 
  // Defining the head section of the document
  head 
    // Defining a meta tag for the character set
    meta(charset="UTF-8")
    // Defining a meta tag for the viewport 
    meta(name="viewport", content="width=device-width, initial-scale=1.0") 
    // Defining the title of the document
    title Twitter 
    // Linking the main CSS file
    link(rel="stylesheet", href="/css/main.css") 
    // Linking the main CSS file
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM", crossorigin="anonymous") 
    // Linking the Bootstrap CSS file
    script(src="https://unpkg.com/axios@1.1.2/dist/axios.min.js")
     // Linking the Axios library
    // Linking the Axios library (Axios is a popular JavaScript library that is used to make HTTP requests from a browser or from Node.js. It provides a simple and intuitive API for making asynchronous network calls and handling responses.)
    // Defining the body section of the document
  body 
    // Including the topbar file
    include ./includes/topbar.pug 
    // Including the topbar file
    // Creating a fluid container for the content
    .container-fluid
      // Defining a block for the content of the page
      block content 