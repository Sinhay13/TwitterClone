script(src="/javascripts/profile.js")
// Container for user profile information
div(class="profile-container bg-white me-3 d-flex flex-column")
  // Form to update image
  form( id= "form-container" class="d-flex p-3 flex-row justify-content-center align-items-center" action="/users/update/image" method="post" enctype="multipart/form-data")
    // Input for img + d-none to not show the form
    input(type="file" name="avatar" class="d-none" id="input-avatar")
    img(src=currentUser.avatar  class="img-fluid" id="image-profile")

  // Container for user name and email
  div(class="d-flex flex-row justify-content-center align-items-center my-3")
    p= `${currentUser.username} (${currentUser.local.email})`

  // Container for tweet and following counts
  div(class="text-center d-flex flex-row justify-content-center align-items-center my-3")
    // Sub-container for tweet count
    div(class="flex-fill")
      p
        strong Tweet
        br
        span(class="text-primary")= tweets && tweets.length ? tweets.length : "-"

    // Sub-container for following count
    div(class="flex-fill")
      p
        strong Following
        br
        span(class="text-primary") -
